@{
    List<int> numberList = (List<int>)ViewData["SiteMsg7"];
    <ul>
        @foreach (var number in numberList)
        {
            var colorCustom = number % 2 == 0 ? "green" : "red";
            <li style="color:@colorCustom">@number</li>
        }
    </ul>
}
