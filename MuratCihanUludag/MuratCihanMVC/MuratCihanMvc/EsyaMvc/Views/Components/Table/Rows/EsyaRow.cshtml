@model List<Esya>;
@{
    int i = 1;
}
@foreach (var esya in Model)
{

    <tr>
        <td>@(i++)</td>
        <td>@esya.Name</td>
        <td>@(esya.isAntika ? "Antika" : "Antika Degil")</td>
        <td> <a class="btn btn-outline-warning" asp-route-id="@esya.Id" asp-action="Guncelle">Guncelle</a> </td>
        <td> <a class="btn btn-outline-danger" asp-route-id="@esya.Id" asp-action="Sil">Sil</a> </td>
    </tr>
}
