*@
@model List<Malzeme>
<style>
    tr {
        text-align: center;
    }
</style>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Fiyat</th>
            <th>Islemler</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">Maleme Bulunamadi</td>
            </tr>
        }

        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.Fiyat</td>
                    <td>
                        <button onclick="Delete(@item.Id)" class="btn btn-outline-danger">Sil</button>
                        <button onclick="Update(@item.Id)" class="btn btn-outline-warning">Duzenle</button>
                    </td>
                </tr>
            }
            <form id="form-tr">
            <tr>
                <td></td>
                <td><input name="Ad" id="Ad" /></td>
                <td><input name="Fiyat" id="Fiyat" /></td>
                <td><button class="btn btn-success w-100" id="btn-ekle-2" type="button">Ekle</button></td>
            </tr>
            </form>
        }

    </tbody>

</table>
