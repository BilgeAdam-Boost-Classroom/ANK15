@model Urun

<h1>Yeni Urun Ekle</h1>
<form asp-action="Ekle">
    <div class="form-group">
        <label class="form-label" asp-for="Ad"></label>
        <input class="form-control" asp-for="Ad" />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Fiyat"></label>
        <input class="form-control" asp-for="Fiyat" />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="StokDurumu"></label>
        <input class="form-check" asp-for="StokDurumu" type="checkbox" />
    </div>
    <button class="btn btn-outline-primary" type="submit">Urun Ekle</button>
</form>
